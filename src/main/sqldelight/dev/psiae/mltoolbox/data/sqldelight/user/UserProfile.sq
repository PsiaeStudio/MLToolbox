CREATE TABLE userProfile(
    id INTEGER PRIMARY KEY NOT NULL,
    uuid TEXT UNIQUE NOT NULL,
    name TEXT NOT NULL,
    is_done_setup INTEGER CHECK(is_done_setup IN (0, 1)) NOT NULL,
    is_tombstoned INTEGER CHECK(is_tombstoned IN (0, 1)) NOT NULL
);

selectAll:
SELECT *
FROM userProfile
WHERE is_tombstoned = FALSE;

selectByUuid:
SELECT *
FROM userProfile
WHERE uuid = :uuid;

insert:
INSERT INTO userProfile(id, uuid, name, is_done_setup, is_tombstoned)
VALUES (?, ?, ?, ?, ?);